<Window x:Class="ZaloCommunityDev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        xmlns:local="clr-namespace:ZaloCommunityDev"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <StackPanel>

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Chọn thiết bị đang online"
                       VerticalAlignment="Center" />
            
            <ComboBox Grid.Column="1"
                      x:Name="onlineDevices"
                      SelectedIndex="0"
                      ItemsSource="{Binding Service.OnlineDevices ,Source={StaticResource Locator}}" />

            <Button Content="Tải lại"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    Command="{Binding RefreshAvdListCommand}"/>
            
            <Button Content="Khởi động"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Command="{Binding StartAvdCommand}"
                    CommandParameter="{Binding ElementName=onlineDevices, Path=SelectedItem}" />
        </Grid>

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Thêm bạn tự động"
                       VerticalAlignment="Center" />

            <ComboBox Grid.Column="1"
                      x:Name="configsList"
                      SelectedIndex="0"
                      ItemsSource="{Binding AddingFriendConfigs}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"
                                       FontWeight="Bold" />
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Độ tuổi: " />
                                    <TextBlock Text="{Binding AgeRange}"
                                               FontStyle="Italic" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="10,0,0,0">
                                    <TextBlock Text="Giới tính: " />
                                    <TextBlock Text="{Binding GenderSelection}"
                                               FontStyle="Italic" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            Margin="10,0,0,0">
                                    <TextBlock Text="Số bạn mỗi lần: " />
                                    <TextBlock Text="{Binding WishAddedNumberFriendPerDay}"
                                               FontStyle="Italic" />
                                </StackPanel>
                                
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                               
                                <StackPanel Orientation="Horizontal"
                                            >
                                    <TextBlock Text="Lời chào nam: " />
                                    <TextBlock Text="{Binding TextGreetingForMale}"
                                               FontStyle="Italic" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            Margin="10,0,0,0">
                                    <TextBlock Text="Lời chào nữ: " />
                                    <TextBlock Text="{Binding TextGreetingForFemale}"
                                               FontStyle="Italic" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                    </DataTemplate>

                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Content="Tải lại"
                    Grid.Column="2"
                    VerticalAlignment="Top"
                    Margin="10,0,0,0"
                    Command="{Binding RefreshAutoAddFriendConfigListCommand}" />
            
            <Button Content="Tự động kết bạn"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    VerticalAlignment="Top"
                    Command="{Binding AutoAddFriendCommand}"
                    CommandParameter="{Binding ElementName=configsList, Path=SelectedItem}" />
        </Grid>

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Spam Friends"
                       FontWeight="Bold"
                       VerticalAlignment="Top" />

            <StackPanel Grid.Column="1">
                <StackPanel Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="Cấu hình "
                               FontWeight="Bold" />
                    <ComboBox ItemsSource="{Binding AutoPostToFriendSessionConfigs}"
                              x:Name="AutoPostToFriendSessionConfigs"
                              />

                    <Button Content="Tải lại"
                            Grid.Column="2"
                            VerticalAlignment="Top"
                            Margin="10,0,0,0"
                            Command="{Binding RefreshAutoAddFriendConfigListCommand}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Nội dung spam bạn nam: " FontWeight="Bold" />
                    <TextBox Text="{Binding ElementName=AutoPostToFriendSessionConfigs, Path=SelectedItem.TextToMale}"
                             MinWidth="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="Nội dung spam bạn nữ: "
                               FontWeight="Bold" />
                    <TextBox Text="{Binding ElementName=AutoPostToFriendSessionConfigs, Path=SelectedItem.TextToFemale}"
                             MinWidth="250" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="Chỉ spam các bạn (cách nhau dấu ;)"
                               FontWeight="Bold" />
                    <TextBox Text="{Binding ElementName=AutoPostToFriendSessionConfigs, Path=SelectedItem.OnlySpamPeopleNames}"
                             MinWidth="250" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="Không spam các bạn (cách nhau dấu ;)"
                               FontWeight="Bold" />
                    <TextBox Text="{Binding ElementName=AutoPostToFriendSessionConfigs, Path=SelectedItem.ExceptSpamPeopleNames}"
                             MinWidth="250" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="5">
                    <TextBlock Text="Số lượng bạn spam (để trống để spam tất cả)"
                               FontWeight="Bold" />
                    <TextBox Text="{Binding ElementName=AutoPostToFriendSessionConfigs, Path=SelectedItem.NumberOfSpamMail}"
                             MinWidth="250" />
                </StackPanel>
            </StackPanel>
           
            <Button Content="Spam ngay"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Command="{Binding AutoSpamFriendCommand}"
                    VerticalAlignment="Top"
                    CommandParameter="{Binding ElementName=AutoPostToFriendSessionConfigs, Path=SelectedItem}" />
        </Grid>



        <Button Width="150"
                Height="50"
                Content="Add Friend"
                Click="OKOK"
                Margin="184,0,183,0" />

        <Button Content="Capture Screen"
                Width="160"
                Height="50"
                Click="Button_Click" />

    </StackPanel>
</Window>
